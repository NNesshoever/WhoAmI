<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="CENTER" minHeight="550.0" minWidth="800.0" stylesheets="@styles.css"  xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.StartseiteController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="278.0" minWidth="10.0" prefWidth="130.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="467.0" minWidth="10.0" prefWidth="450.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="343.0" minWidth="10.0" prefWidth="130.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints maxHeight="457.0" minHeight="10.0" prefHeight="412.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="157.0" minHeight="10.0" prefHeight="88.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <ListView fx:id="PlayersList" onMouseClicked="#SendGameRequest" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
      <Button fx:id="ButttonRefreshPlayers" minWidth="0.0" onAction="#RefreshPlayers" mnemonicParsing="false" text="Neu Laden" styleClass="secondary" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets bottom="5.0" top="5.0" />
         </GridPane.margin>
         <padding>
            <Insets bottom="20.0" left="60.0" right="60.0" top="20.0" />
         </padding>
         <font>
            <Font name="Segoe UI" size="12.0" />
         </font>
      </Button>
      <Button fx:id="ButtonLogout" mnemonicParsing="false" onAction="#LogoutUser" text="Abmelden" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.valignment="TOP">
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
         <padding>
            <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
         </padding>
      </Button>
      <Button fx:id="Accept" onAction="#AcceptRequest" mnemonicParsing="false" text="Accept" GridPane.columnIndex="2" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="75.0" top="75.0" />
         </GridPane.margin>
      </Button>
      <Button fx:id="Decline" onAction="#DeclineRequest" mnemonicParsing="false" text="Decline" GridPane.columnIndex="2" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="150.0" top="75.0" />
         </GridPane.margin>
      </Button>
      <TextField fx:id="ShownMessage" editable="false" GridPane.columnIndex="2" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="10.0" right="10.0" top="-20.0" />
         </GridPane.margin>
      </TextField>
   </children>
</GridPane>
